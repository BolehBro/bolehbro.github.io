---
const navItems = [
  { name: "Home", id: "hero" },
  { name: "Mission", id: "mission" },
  { name: "Team", id: "team" },
  { name: "Tech", id: "tech-stack" },
  { name: "Contact", id: "contact" },
];
---

<nav
  x-data="{ open: false }"
  class="fixed top-0 left-0 w-full z-50 backdrop-filter backdrop-blur-lg bg-opacity-30 border-b border-gray-200/20"
>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="text-white font-bold text-2xl">
      <span
        class="bg-clip-text text-transparent bg-gradient-to-r from-amber-300 to-amber-500"
        >BolehBro</span
      >
    </div>

    <div class="hidden md:flex items-center space-x-1">
      {
        navItems.map((item, index) => (
          <a
            href={`#${item.id}`}
            class="relative px-4 py-2 text-gray-800 dark:text-white group overflow-hidden transition-colors duration-300 hover:text-amber-600 dark:hover:text-amber-400 text-shadow"
          >
            <span class="relative z-10 font-medium">{item.name}</span>
            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-amber-400 group-hover:w-full transition-all duration-300" />
          </a>
        ))
      }
    </div>

    <!-- Mobile menu button -->
    <button
      @click="open = !open"
      class="md:hidden text-white cursor-pointer"
      id="mobile-menu-button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile navigation menu (hidden by default) -->
  <div
    x-show="open"
    x-cloak
    @click.outside="open = false"
    class="bg-black/80 backdrop-blur-md absolute w-full"
    x-transition:enter="transition ease-out duration-100" 
    x-transition:enter-start="opacity-0 transform -translate-y-8"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition ease-in duration-75"
    x-transition:leave-start="opacity-100 transform translate-y-0"
    x-transition:leave-end="opacity-0 transform -translate-y-8"
    id="mobile-menu"
  >
    <div class="px-2 pt-2 pb-3 space-y-1">
      {
        navItems.map((item) => (
          <a
            href={`#${item.id}`}
            x-on:click="open = false"
            class="block px-3 py-2 text-white font-medium border-l-2 border-transparent hover:border-amber-400 transition-all duration-300"
          >
            {item.name}
          </a>
        ))
      }
    </div>
  </div>
</nav>
